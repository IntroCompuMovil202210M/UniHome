<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroEstudiante">

    <TextView
        android:id="@+id/TextoRegistroE"
        android:layout_width="166dp"
        android:layout_height="72dp"
        android:layout_marginTop="28dp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeTextType="uniform"
        android:text="Registro"
        android:textColor="@color/Blue"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logoRegistroE"
        android:layout_width="79dp"
        android:layout_height="72dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/TextoRegistroE"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo2" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextoRegistroE">

        <ImageView
            android:id="@+id/fotoE"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/foto_logo"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/nombreE"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:alpha="0.5"
            android:background="@drawable/estilo_edittext"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:textColorHint="@color/Blue" />

        <EditText
            android:id="@+id/apellidoE"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:alpha="0.5"
            android:background="@drawable/estilo_edittext"
            android:ems="10"
            android:hint="Apellido"
            android:inputType="textPersonName"
            android:textColorHint="@color/Blue" />

        <EditText
            android:id="@+id/emailRegistroE"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:alpha="0.5"
            android:background="@drawable/estilo_edittext"
            android:ems="10"
            android:hint="Correo Electrónico"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/Blue" />

        <EditText
            android:id="@+id/contrasenaRegistroE"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:alpha="0.5"
            android:background="@drawable/estilo_edittext"
            android:ems="10"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:textColorHint="@color/Blue" />

        <EditText
            android:id="@+id/cofirmacionContrasenaE"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:alpha="0.5"
            android:background="@drawable/estilo_edittext"
            android:ems="10"
            android:hint="Confirmar Contraseña"
            android:inputType="textPassword"
            android:textColorHint="@color/Blue" />

        <EditText
            android:id="@+id/universidad"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:alpha="0.5"
            android:background="@drawable/estilo_edittext"
            android:ems="10"
            android:layout_marginTop="8dp"
            android:hint="Universidad"
            android:inputType="text"
            android:textColorHint="@color/Blue" />

        <EditText
            android:id="@+id/programa"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:alpha="0.5"
            android:background="@drawable/estilo_edittext"
            android:ems="10"
            android:layout_marginTop="8dp"
            android:hint="Programa Académico"
            android:inputType="text"
            android:textColorHint="@color/Blue" />

        <Button
            android:id="@+id/registrarseE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="@color/Blue"
            android:text="Registrarse"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>