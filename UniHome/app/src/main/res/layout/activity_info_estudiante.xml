<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="50dp"
    tools:context=".InfoEstudiante">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="95dp"
            android:layout_height="99dp"
            app:srcCompat="@drawable/logo1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="179dp"
            android:layout_height="76dp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeTextType="uniform"
            android:text="Cuenta"
            android:textColor="@color/ColorLogoUnihome"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/fotoperfilE"
        android:layout_width="161dp"
        android:layout_height="165dp"
        android:layout_marginVertical="30dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/nombreApellidoE"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeTextType="uniform"
        android:text="Nombre Apellido"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/ColorLogoUnihome"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/universidadE"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeTextType="uniform"
        android:text="Universidad"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/ColorLogoUnihome"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/programaE"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeTextType="uniform"
        android:text="Programa Académico"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/ColorLogoUnihome"
        android:textStyle="bold" />

    <Button
        android:id="@+id/sesionE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar Sesión"
        android:layout_marginHorizontal="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/estilo_edittext"
        android:backgroundTint="@color/Blue"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/actualizarE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar Perfil"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:layout_gravity="center"
        android:background="@drawable/estilo_edittext"
        android:backgroundTint="@color/Blue"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/eliminarE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_gravity="center"
        android:text="Borrar Cuenta"
        android:background="@drawable/estilo_edittext"
        android:backgroundTint="@color/Red"
        android:textColor="@color/white" />

</LinearLayout>