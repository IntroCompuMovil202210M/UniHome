<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="50dp"
    android:orientation="vertical"
    tools:context=".InfoArrendatario">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="95dp"
            android:layout_height="99dp"
            app:srcCompat="@drawable/logo1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="179dp"
            android:layout_height="76dp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeTextType="uniform"
            android:text="Cuenta"
            android:textColor="@color/ColorLogoUnihome"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/fotoperfilA"
        android:layout_width="161dp"
        android:layout_height="165dp"
        android:layout_gravity="center"
        android:layout_marginVertical="30dp" />

    <TextView
        android:id="@+id/nombreApellidoA"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="Nombre Apellido"
        android:textColor="@color/ColorLogoUnihome"
        android:textStyle="bold" />

    <Button
        android:id="@+id/sesionA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar SesiÃ³n"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:background="@drawable/estilo_edittext"
        android:backgroundTint="@color/Blue"
        android:textColor="@color/white"/>

</LinearLayout>