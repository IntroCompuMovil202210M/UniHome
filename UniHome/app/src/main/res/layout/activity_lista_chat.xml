<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListaChat"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/estilo_edittext"
        android:backgroundTint="@color/Blue">

        <ImageView
            android:id="@+id/fotoPerfilChat"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_weight="0.2"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/usuarioNombreChat"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="0.8"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:text="Nombre Usuario" />
    </LinearLayout>
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleChats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/escribirMensajeChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/estilo_edittext"
            android:ems="10"
            android:hint="Mensaje"
            android:layout_weight="0.8"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/enviarChat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@drawable/estilo_edittext"
            android:backgroundTint="@color/Blue"
            android:textColor="@color/white"
            android:text="Enviar" />
    </LinearLayout>
</LinearLayout>